{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "composite": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "rootDir": ".",
    "noEmit": true,
    "incremental": true,
  },
  "ts-node": {
    "files": true,
    "module": "node"
  },
  "include": [
    "**/*.ts",
    "types/**.d.ts",
    ".eslintrc.js"
  ],
  "exclude": []
}
